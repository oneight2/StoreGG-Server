<%- include ../../partials/header.ejs %>
  <%- include ../../partials/navbar.ejs %>
    <%- include ../../partials/sidebar.ejs %>

      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Kategori</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
                  <li class="breadcrumb-item active">Update</li>
                </ol>
              </div>
            </div>
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Payment</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form action="/payment/actionUpdate/<%= payment._id %>?_method=PUT" method="post">
                <div class="card-body">
                  <input type="checkbox" name="status" <%=payment.status==='Y' ? 'checked' : '' %>
                  data-bootstrap-switch data-off-color="danger" data-on-color="success">

                  <div class="form-group">
                    <label for="type">Metode Pembayaran</label>
                    <input type="string" class="form-control" id="type" name="type" value="<%= payment.type %>" />
                  </div>
                  <div class="form-group">
                    <label>Bank</label>
                    <div class="select2-purple">
                      <select class="form-control select2" style="width: 100%" name="banks" multiple="multiple"
                        data-placeholder="Pilih Akun Tujuan Bank">
                        <% bank.forEach(field=>{%>
                          <% payment.banks.forEach(fieldPayment=>{ %>
                            <option value="<%= field._id %>" <% if(field._id.toString() === fieldPayment._id.toString()){ %>
                              selected
                            <% }  %>
                            <% }) %>
                            >
                              <%= field.name %>-<%= field.nameBank %>-<%= field.noRekening %>
                            </option>
                          <%})%>
                      </select>
                    </div>
                  </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Update</button>
                </div>
              </form>
            </div>
            <!-- /.card -->
          </div>
        </section>
      </div>
      <%- include ../../partials/footer.ejs %>
        <%- include ../../partials/js.ejs %>